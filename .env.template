# Ancestry Automation Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# ESSENTIAL CREDENTIALS (REQUIRED)
# ================================
ANCESTRY_USERNAME=your_email@example.com
ANCESTRY_PASSWORD=your_password_here

# ================================
# TREE AND PROFILE CONFIGURATION
# ================================
# Your primary tree and profile information
MY_TREE_ID=your_tree_id_here
MY_PROFILE_ID=your_profile_id_here
TREE_NAME=Your Tree Name
TREE_OWNER_NAME=Your Name

# ================================
# REFERENCE PERSON CONFIGURATION
# ================================
# Person used as reference point for relationship calculations
REFERENCE_PERSON_ID=I1234567890
REFERENCE_PERSON_NAME=Reference Person Name

# ================================
# USER SIGNATURE CONFIGURATION
# ================================
# Used in message signatures and AI prompts
USER_NAME=Your Name
USER_LOCATION=Your Location

# ================================
# TESTING CONFIGURATION
# ================================
# Profile ID used for testing operations (optional)
TESTING_PROFILE_ID=test_profile_id_here

# Person ID for testing tree operations (optional)
TESTING_PERSON_TREE_ID=test_person_id_here

# ================================
# TEST/MOCK VALUES CONFIGURATION
# ================================
# These values are used for testing and fallback scenarios
# Override defaults only if needed for your specific testing setup

# Default tree ID for testing fallbacks
# TEST_TREE_ID=12345678

# Default owner name for testing fallbacks  
# TEST_OWNER_NAME=Test Owner

# Default email for testing contexts
# TEST_EMAIL=test@example.com

# Default CSRF token for mock operations
# TEST_CSRF_TOKEN=mock_csrf_token_12345678901234567890

# Default profile ID for mock operations
# TEST_PROFILE_ID=mock_profile_id_12345

# Default UUID for mock operations
# TEST_UUID=mock_uuid_12345

# Default tab handle for mock operations
# TEST_TAB_HANDLE=mock_tab_handle_12345

# Default recipient ID for test messaging
# TEST_RECIPIENT_ID=DUMMY-RECIPIENT-ID

# Default recipient username for test messaging
# TEST_RECIPIENT_USERNAME=DummyRecipient

# ================================
# OPTIONAL CONFIGURATION
# ================================
# Application mode (production, development, dry_run)
APP_MODE=production

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Processing limits (0 = unlimited)
MAX_PAGES=0
MAX_INBOX=0
MAX_PRODUCTIVE_TO_PROCESS=0

# AI Configuration
AI_CONTEXT_MESSAGES_COUNT=7
AI_CONTEXT_MESSAGE_MAX_WORDS=500

# Microsoft Graph Integration (optional)
# MS_GRAPH_CLIENT_ID=your_client_id
# MS_GRAPH_TENANT_ID=common
# MS_TODO_LIST_NAME=Tasks

# Rate Limiting Configuration
INITIAL_DELAY=0.5
MAX_DELAY=60.0
BACKOFF_FACTOR=1.8

# Database Configuration
DATABASE_FILE=ancestry_data.db
DB_POOL_SIZE=10

# Directory Configuration
LOG_DIR=Logs
DATA_DIR=Data
CACHE_DIR=Cache
